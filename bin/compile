#!/usr/bin/env bash

set -e

cd $1
curl -s https://s3.amazonaws.com/uvize-buildpack/packages/cedar/apache-2.4.14.tar.gz       | tar xz
curl -s https://s3.amazonaws.com/uvize-buildpack/packages/cedar/passenger-4.0.59.tar.gz    | tar xz
curl -s https://s3.amazonaws.com/uvize-buildpack/packages/cedar/shibboleth-sp-2.5.3.tar.gz | tar xz
echo "-----> apache-passenger-shibboleth-buildpack: Installed Apache, Passenger, and Shibboleth to $1/opt"

exit 0
